{
  "$schema": "https://raw.githubusercontent.com/rharkor/next-boilerplate/dev/packages/cli-helpers/schemas/plugin.d.json",
  "name": "Development Tools",
  "description": "Comprehensive development tools including ESLint, Prettier, Husky, and TypeScript configuration for code quality and consistency",
  "files": [
    ".eslintrc.js",
    ".eslintrc.json",
    ".prettierrc",
    ".prettierignore",
    ".lintstagedrc.js",
    "tsconfig.json",
    ".husky/pre-commit",
    ".husky/pre-push",
    ".husky/commit-msg",
    "lib/setup-dev-tools.ts",
    "lib/eslint-configs/base.js",
    "lib/eslint-configs/react.js",
    "lib/eslint-configs/nextjs.js",
    "lib/eslint-configs/graphql.js",
    "lib/eslint-configs/node.js",
    "lib/prettier-configs/default.js",
    "lib/prettier-configs/graphql.js",
    "lib/husky-configs/default.js",
    "lib/husky-configs/strict.js",
    "lib/typescript-configs/base.json",
    "lib/typescript-configs/nextjs.json",
    "lib/typescript-configs/node.json",
    "lib/typescript-configs/strict.json",
    "README.md"
  ],
  "dependencies": {
    "@KalabAmssalu/logger": "^1.0.0",
    "@KalabAmssalu/task": "^1.0.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-next": "^14.0.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-sonarjs": "^1.0.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-n": "^16.0.0",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  },
  "scripts": {
    "dev:setup": "tsx lib/setup-dev-tools.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint:check && npm run type-check",
    "dev:validate": "npm run lint:check && npm run type-check && npm run format:check"
  }
}
