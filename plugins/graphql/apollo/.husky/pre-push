#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run full linting
echo "ğŸ” Running full linting..."
npm run lint

# Run type checking
echo "ğŸ” Running type checking..."
npx tsc --noEmit

# Run GraphQL validation
echo "ğŸ” Validating GraphQL setup..."
npm run graphql:validate

# Run tests (if available)
if [ -f "package.json" ] && grep -q '"test"' package.json; then
  echo "ğŸ§ª Running tests..."
  npm test
fi

# Check for uncommitted changes after codegen
if ! git diff --quiet; then
  echo "âŒ Uncommitted changes detected. Please commit generated files."
  echo "Run: git add . && git commit -m 'chore: update generated files'"
  exit 1
fi

echo "âœ… Pre-push checks passed!"
