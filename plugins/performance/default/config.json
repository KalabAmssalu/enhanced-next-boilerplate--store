{
  "$schema": "https://raw.githubusercontent.com/rharkor/next-boilerplate/dev/packages/cli-helpers/schemas/plugin.d.json",
  "name": "Performance Optimization",
  "description": "Performance monitoring, bundle analysis, and optimization tools",
  "files": [
    "next.config.js",
    "lighthouse.config.js",
    "bundle-analyzer.config.js",
    "lib/performance.ts",
    "components/Image.tsx",
    "components/Link.tsx"
  ],
  "dependencies": {
    "@next/bundle-analyzer": "^14.0.0",
    "lighthouse-ci": "^0.12.0",
    "next-pwa": "^5.6.0",
    "sharp": "^0.32.0",
    "workbox-webpack-plugin": "^7.0.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "scripts": {
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "perf:audit": "npm run lighthouse && npm run analyze"
  }
}
